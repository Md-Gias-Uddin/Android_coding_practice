<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/save_btn_Id"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete"
            android:id="@+id/delete_btn_Id"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:id="@+id/update_btn_Id"
            />

    </LinearLayout>

    <EditText
        android:hint="Tour No."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tourIdTextId"/>
    <EditText
        android:hint="Date:dd/mm/yy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dateTextId"/>
    <EditText
        android:hint="Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/locationTextId"/>


    <EditText
        android:id="@+id/costTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:padding="10dp"
        android:hint="Total Cost"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show"
        android:id="@+id/show_btn_Id"

        />


</LinearLayout>