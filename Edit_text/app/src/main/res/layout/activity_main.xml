<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText
        android:id="@+id/editText1_id"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:hint="@string/edit_text1"
        android:inputType="numberDecimal"
        android:textCursorDrawable="@null"
        android:backgroundTint="@color/colorPrimaryDark"><!-- nicher dager color-->

    </EditText>


    <EditText
        android:id="@+id/editText2_id"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:hint="@string/edit_text2"
        android:inputType="numberDecimal"
        android:textCursorDrawable="@null"> <!-- cursor er color-->
    </EditText>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_b_id"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/add_button" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sub_b_id"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/sub_button">

        </Button>
    </LinearLayout>

    <TextView
        android:layout_margin="20sp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/result_text_v_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

    </TextView>
</LinearLayout>